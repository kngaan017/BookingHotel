@model IEnumerable<QuanLyDatPhongKhachSan.Models.blog>

@{
    ViewBag.Title = "Quản lý blog";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.Title</title>
@section _Header {
    <!-- Custom styles for this page -->
    <link href="~/Areas/Admin/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Quản lý blog</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <p class="text-right">
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create")'">Create New</button>
                </p>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Tag</th>
                            <th>Image</th>
                            <th>Publish Date</th>
                            <th>Meta</th>
                            <th>Hide</th>
                            <th>Order</th>
                            <th>Date Begin</th>
                            <th>Username</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.content)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tag)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.img)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.publishDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.meta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.hide)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.order)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.datebegin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.user.username)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.blogID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.blogID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.blogID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

@section _Footer {
    <!-- Page level plugins -->
    <script src="~/Areas/Admin/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Areas/Admin/Content/js/demo/datatables-demo.js"></script>
}

