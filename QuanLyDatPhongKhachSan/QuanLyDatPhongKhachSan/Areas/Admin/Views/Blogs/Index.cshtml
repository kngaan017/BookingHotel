@model IEnumerable<QuanLyDatPhongKhachSan.Models.blog>

@{
    ViewBag.Title = "Quản lý blog";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.Title</title>
@section _Header {
    <!-- Custom styles for this page -->
    <link href="~/Areas/Admin/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Quản lý blog</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="row mb-4">
                    <div class="col-md-4">
                        <input type="hidden" id="selectedBedValue" value="" />
                        <!-- Phần tử Chọn số giường -->
                        <label for="bedsFilter">Chọn tag:</label>
                        <select id="bedsFilter" class="form-control custom-select" onchange="filterRooms(); setSelectedBed()">
                            <option value="">Tất cả</option>
                            @foreach (var tag in ViewBag.MaxValues)
                            {
                                <option value="@tag" data-bed="@tag">@tag</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-8">
                        <p class="text-right">
                            <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "blogs")'">Create New</button>
                        </p>
                    </div>
                </div>
                
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Title</th>
                            <th>Image</th>
                            <th>Tag</th>
                            <th>Publish Date</th>
                            <th>Meta</th>
                            <th>Hide</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int stt = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@stt
                                <td>
                                    @{
                                        string title = item.title;
                                        int maxLength = 20;
                                        string displayedTitle = title.Length > maxLength ? title.Substring(0, maxLength) + "..." : title;
                                    }
                                    @Html.DisplayFor(modelItem => displayedTitle)
                                </td>
                                @*<td>
                    @Html.DisplayFor(modelItem => item.content)
                </td>*@

                                <td>
                                    <img src="~/Areas/Admin/Content/upload/img/blog/@item.img" width="50px" height="50px" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tag)
                                </td>
                                <td>
                                    @(item.publishDate.HasValue ? item.publishDate.Value.ToString("dd/MM/yyyy") : "")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.meta)
                                </td>
                                <td>
                                    @(item.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                                </td>
                               
                                <td>
                                    <a href="@Url.Action("Edit","blogs",  new { id = item.blogID })" class="btn btn-outline-dark">
                                        <i class='fas fa-pencil-alt'></i>
                                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                                    </a>
                                    <a href="@Url.Action("Details",  new { id = item.blogID })" class="btn btn-outline-primary">
                                        <i class='fas fa-info-circle'></i>
                                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                                    </a>
                                    <a href="@Url.Action("Delete",  new { id = item.blogID })" class="btn btn-outline-danger">
                                        <i class='fas fa-trash-alt'></i>
                                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                            stt++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
<script>
    function setSelectedBed() {
        var selectedBed = document.getElementById("bedsFilter").value;
        sessionStorage.setItem("selectedBed", selectedBed);
    }
    function filterRooms() {
        var selectedValue = document.getElementById("bedsFilter").value;
        var table = document.getElementById("dataTable");
        var rows = table.getElementsByTagName("tbody")[0].getElementsByTagName("tr");

        for (var i = 0; i < rows.length; i++) {
            var bedValue = rows[i].getElementsByTagName("td")[3].innerText.trim();

            if (selectedValue === "" || bedValue === selectedValue) {
                rows[i].style.display = "";
            } else {
                rows[i].style.display = "none";
            }
        }
    }
</script>
@section _Footer {
    <!-- Page level plugins -->
    <script src="~/Areas/Admin/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Areas/Admin/Content/js/demo/datatables-demo.js"></script>
}

