@model IEnumerable<QuanLyDatPhongKhachSan.Models.blog>

@{
    ViewBag.Title = "Quản lý blog";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.Title</title>
@section _Header {
    <!-- Custom styles for this page -->
    <link href="~/Areas/Admin/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Quản lý blog</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <p class="text-right">
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create")'">Create New</button>
                </p>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            @*<th>Content</th>*@
                            <th>Image</th>
                            <th>Publish Date</th>
                            <th>Meta</th>
                            <th>Hide</th>
                            <th>Order</th>
                            <th>Date Begin</th>
                            @*<th>Username</th>*@
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        string title = item.title;
                                        int maxLength = 20; 
                                        string displayedTitle = title.Length > maxLength ? title.Substring(0, maxLength) + "..." : title;
                                    }
                                    @Html.DisplayFor(modelItem => displayedTitle)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.content)
                                </td>*@
                                
                                <td>
                                    <img src="~/Areas/Admin/Content/upload/img/blog/@item.img" width="50px" height="50px" />
                                </td>
                                <td>
                                    @(item.publishDate.HasValue ? item.publishDate.Value.ToString("dd/MM/yyyy") : "")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.meta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.hide)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.order)
                                </td>
                                <td>
                                    @(item.datebegin.HasValue ? item.datebegin.Value.ToString("dd/MM/yyyy") : "")
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.user.username)
                                </td>*@
                                <td>
                                    <a href="@Url.Action("Edit",  new { id = item.blogID })" class="btn btn-outline-dark">
                                        <i class='fas fa-pencil-alt'></i>
                                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                                    </a>
                                    <a href="@Url.Action("Details",  new { id = item.blogID })" class="btn btn-outline-primary">
                                        <i class='fas fa-info-circle'></i>
                                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                                    </a>
                                    <a href="@Url.Action("Delete",  new { id = item.blogID })" class="btn btn-outline-danger">
                                        <i class='fas fa-trash-alt'></i>
                                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

@section _Footer {
    <!-- Page level plugins -->
    <script src="~/Areas/Admin/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Areas/Admin/Content/js/demo/datatables-demo.js"></script>
}

