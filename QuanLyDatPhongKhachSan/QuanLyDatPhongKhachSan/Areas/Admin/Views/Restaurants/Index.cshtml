@model IEnumerable<QuanLyDatPhongKhachSan.Models.restaurant>

@{
    ViewBag.Title = "Quản lý nhà hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.Title</title>
@section _Header {
    <!-- Custom styles for this page -->
    <link href="~/Areas/Admin/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Quản lý nhà hàng</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <p class="text-right">
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create")'">Create New</button>
                </p>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th>Desciption</th>
                            <th>Order</th>
                            <th>Date Begin</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.img)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.order)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.datebegin)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

@section _Footer {
    <!-- Page level plugins -->
    <script src="~/Areas/Admin/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Areas/Admin/Content/js/demo/datatables-demo.js"></script>
}


