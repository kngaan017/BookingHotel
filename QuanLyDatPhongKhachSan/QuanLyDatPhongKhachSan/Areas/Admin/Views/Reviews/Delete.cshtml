@model QuanLyDatPhongKhachSan.Models.review

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container col-lg-10">
    <h4><b>Bạn có chắc muốn xóa đánh giá này không?</b></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.reviewID)

    <div class="form-group">
        <div class="row">
            <div class="col-md-2 text-right align-self-center">
                <strong>@Html.Label("Rating", htmlAttributes: new { @class = "control-label" })</strong>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.rating)" readonly>
            </div>
            <div class="col-md-2 text-right align-self-center">
                <strong>@Html.LabelFor(model => model.meta, htmlAttributes: new { @class = "control-label" })</strong>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.meta)" readonly>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-2 text-right align-self-center">
                <strong>@Html.DisplayNameFor(model => model.comment)</strong>
            </div>
            <div class="col-md-4">
                @{
                    string description = Model.comment;
                    if (!string.IsNullOrEmpty(description))
                    {
                        description = System.Text.RegularExpressions.Regex.Replace(description, "<.*?>", string.Empty);
                    }
                }
                <textarea readonly class="form-control" rows="3" style="resize: vertical; max-height: 200px; max-width: 327pxs;">@description</textarea>
            </div>
            <div class="col-md-2 text-right align-self-center">
                <strong>@Html.LabelFor(model => model.order, htmlAttributes: new { @class = "control-label" })</strong>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.order)" readonly>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-2 text-right align-self-center">
                <strong>@Html.Label("Hiển thị", htmlAttributes: new { @class = "control-label" })</strong>
            </div>
            <div class="col-md-10">
                @{
                    bool hide = (Model.hide.GetValueOrDefault(false) ? true : false);
                }
                @Html.CheckBoxFor(model => hide, new { disabled = "disabled" })
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <div class="container col-lg-10 mb-3">
                <div class="text-right">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    }
</div>