@{
    ViewBag.Title = "ChangePassword";
}

<title>@ViewBag.Title</title>
<div class="hero-wrap" style="background-image: url('../Content/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    <p class="breadcrumbs mb-2"><span class="mr-2"><a href="../Home/Index">Home</a></span> <span>Restaurants</span></p>
                    <h1 class="mb-4 bread">Change Password</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="col-lg-9 ">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }
            <form method="post" action="@Url.Action("ChangePassword", "Account")">
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row mb-3 justify-content-center">
                    <div class="col-md-4 text-right align-self-center">
                        <label>Current password:</label>
                    </div>
                    <div class="col-md-8">
                        <input type="password" class="form-control" name="currentPassword" minlength="6" required/>
                    </div>
                </div>
                <div class="row mb-3 justify-content-center">
                    <div class="col-md-4 text-right align-self-center">
                        <label>New password:</label>
                    </div>
                    <div class="col-md-8">
                        <input type="password" class="form-control" name="newPassword" minlength="6" required/>
                    </div>
                </div>
                <div class="row mb-3 justify-content-center">
                    <div class="col-md-4 text-right align-self-center">
                        <label>Confirm password:</label>
                    </div>
                    <div class="col-md-8">
                        <input type="password" class="form-control" name="confirmPassword" minlength="6" required/>
                    </div>
                </div>
                <div class="row mb-3 mr-1 justify-content-end">
                    <button type="submit" class="btn btn-primary py-2 px-3">Save</button>
                </div>
            </form>
        </div>
    </div>
</section>

<script>
    setTimeout(function () {
        $('.alert').fadeOut('slow');
    }, 3000);
</script>