@model QuanLyDatPhongKhachSan.Models.user
@{
    ViewBag.Title = "Profile";
}

<title>@ViewBag.Title</title>
<div class="hero-wrap" style="background-image: url('../Content/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    <p class="breadcrumbs mb-2"><span class="mr-2"><a href="../Home/Index">Home</a></span> <span>Restaurants</span></p>
                    <h1 class="mb-4 bread">Profile</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="col-lg-9">
            <div class="row mb-3 justify-content-center">
                <div class="col-md-4 text-right align-self-center">
                    <label>Username:</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control" value="@Model.username" readonly>
                </div>
            </div>
            <div class="row mb-3 justify-content-center">
                <div class="col-md-4 text-right align-self-center">
                    <label>Fullname:</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control" value="@Model.fullname" readonly>
                </div>
            </div>
            <div class="row mb-3 justify-content-center">
                <div class="col-md-4 text-right align-self-center">
                    <label>Phone number:</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control" value="@Model.phonenumber" readonly>
                </div>
            </div>
            <div class="row mb-3 justify-content-center">
                <div class="col-md-4 text-right align-self-center">
                    <label>Email:</label>
                </div>
                <div class="col-md-8">
                    <input type="text" class="form-control" value="@Model.email" readonly>
                </div>
            </div>
            <div class="row mb-3 mr-1 justify-content-end">
                <a href="@Url.Action("EditProfile", "Account")" class="btn btn-primary py-2 px-3">Edit</a>
            </div>
        </div>
    </div>
</section>
