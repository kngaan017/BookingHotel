@model QuanLyDatPhongKhachSan.Models.blog

@{
    ViewBag.Title = "Blog Detail";
}

<title>@ViewBag.Title</title>
<div class="hero-wrap" style="background-image: url('../Content/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    <p class="breadcrumbs mb-2" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="../Home/Index">Home</a></span> <span class="mr-2"><a href="/blog">Blog</a></span></p>
                    <h1 class="mb-4 bread">Blog Detail</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 ftco-animate order-md-last mx-auto">
                <h2 class="mb-3">@Model.title</h2>
                <p>@Model.content</p>
                <p>
                    <img src="/Areas/Admin/Content/upload/img/blog/@Model.img" alt="" class="img-fluid">
                </p>
            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section> <!-- .section -->
