@model QuanLyDatPhongKhachSan.Models.room

@{
    ViewBag.Title = "Deluxe - Booking";
}

<title>@ViewBag.Title</title>
<div class="hero-wrap" style="background-image: url('../Content/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    <p class="breadcrumbs mb-2" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="../Home/Index">Home</a></span> <span class="mr-2"><a href="/phong-o">Room</a></span></p>
                    <h1 class="mb-4 bread">Reservation</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section">
    <div class="container">
        <div class="row probootstrap-gutter40">
            <div class="col-md-7">
                <div class="col-md-12 ftco-animate">
                    <h2 class="mb-4">@Model.type Room</h2>
                    <div class="single-slider owl-carousel">
                        <div class="item">
                            <div class="room-img" style="background-image: url(../Content/images/@Model.img1);"></div>
                        </div>
                        <div class="item">
                            <div class="room-img" style="background-image: url(../Content/images/@Model.img2);"></div>
                        </div>
                        <div class="item">
                            <div class="room-img" style="background-image: url(../Content/images/@Model.img3);"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 room-single mt-4 mb-5 ftco-animate">
                    <div class="d-md-flex mt-5 mb-5">
                        <ul class="list">
                            <li><span>Max: </span> @Model.max</li>
                            <li><span>Size: </span>@Model.size</li>
                            <h5>Available: <span style="color: red;">@Model.available room</span></h5>
                        </ul>
                        <ul class="list ml-md-5">
                            <li><span>View: </span>@Model.view</li>
                            <li><span>Bed: </span>@Model.bed</li>
                        </ul>

                    </div>
                    <hr>
                    <h3>Price: $@Model.price/day</h3>
                    <p>@Model.description</p>
                </div>
            </div>
            <div class="col-md-5">
                <h2 class="mt0">Reservation Form</h2>
                <form id="reservationForm" method="post" action="@Url.Action("Reserve", "Room")" class="probootstrap-form">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md">
                            <div class="form-group">
                                <label for="lname">Full Name</label>
                                <input type="text" class="form-control" id="lname" name="lname" value="@ViewBag.Fullname" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="phonenumber">Phone number <i class="icon icon-mobile-phone"></i> </label>
                                <div class="form-field">
                                    <input type="tel" class="form-control" id="phone" name="phone" value="@ViewBag.Phone" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="email">Email <i class="icon icon-mail-forward"></i></label>
                                <div class="form-field">
                                    <input type="email" class="form-control" id="email" name="email" value="@ViewBag.Email" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="#">Check-in Date</label>
                                <input type="date" class="form-control" id="checkin_date" name="checkin_date" required>
                                <span id="checkin_error" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="#">Check-out Date</label>
                                <input type="date" class="form-control" id="checkout_date" name="checkout_date" required>
                                <span id="checkout_error" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb30">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="adults">Adults</label>
                                <div class="form-field">
                                    <select name="adults" id="adults" class="form-control" required>
                                        <option value="" disabled selected>Number of adults</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="children">Children</label>
                                <div class="form-field">
                                    <select name="children" id="children" class="form-control">
                                        <option value="" disabled selected>Number of childrens</option>
                                        <option value="1">1</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md">
                            <div class="form-group">
                                <label for="requests">Requests</label>
                                <input type="text" class="form-control" id="requests" name="requests">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="buffet" class="mr-2">Buffet at the restaurant?</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="buffet" id="buffet_yes" value="yes" onchange="calculateBookingDetails()">
                            <label class="form-check-label" for="buffet_yes">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="buffet" id="buffet_no" value="no" onchange="calculateBookingDetails()">
                            <label class="form-check-label" for="buffet_no">No</label>
                        </div>
                    </div>
                    <hr />
                    <h6>Booking duration: <span id="booking_duration"></span></h6>
                    <h6>Surcharge: <span id="surcharge"></span></h6>
                    <h6>Total amount: <span id="total_amount"></span></h6>
                    <h6>Payment method: <span>Cash</span></h6>
                    <input type="hidden" name="roomID" value="@Model.roomID" />
                    <input type="hidden" name="price" value="@Model.price" />

                    <div class="form-group text-right">
                        <input type="submit" class="btn btn-primary btn-lg" id="submit" name="submit" value="Reserve">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section> <!-- .section -->


<section class="instagram pt-5">
    <div class="container-fluid">
        <div class="row no-gutters justify-content-center pb-5">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <h2><span>Instagram</span></h2>
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-sm-12 col-md ftco-animate">
                <a href="../Content/images/insta-1.jpg" class="insta-img image-popup" style="background-image: url(../Content/images/insta-1.jpg);">
                    <div class="icon d-flex justify-content-center">
                        <span class="icon-instagram align-self-center"></span>
                    </div>
                </a>
            </div>
            <div class="col-sm-12 col-md ftco-animate">
                <a href="../Content/images/insta-2.jpg" class="insta-img image-popup" style="background-image: url(../Content/images/insta-2.jpg);">
                    <div class="icon d-flex justify-content-center">
                        <span class="icon-instagram align-self-center"></span>
                    </div>
                </a>
            </div>
            <div class="col-sm-12 col-md ftco-animate">
                <a href="../Content/images/insta-3.jpg" class="insta-img image-popup" style="background-image: url(../Content/images/insta-3.jpg);">
                    <div class="icon d-flex justify-content-center">
                        <span class="icon-instagram align-self-center"></span>
                    </div>
                </a>
            </div>
            <div class="col-sm-12 col-md ftco-animate">
                <a href="../Content/images/insta-4.jpg" class="insta-img image-popup" style="background-image: url(../Content/images/insta-4.jpg);">
                    <div class="icon d-flex justify-content-center">
                        <span class="icon-instagram align-self-center"></span>
                    </div>
                </a>
            </div>
            <div class="col-sm-12 col-md ftco-animate">
                <a href="../Content/images/insta-5.jpg" class="insta-img image-popup" style="background-image: url(../Content/images/insta-5.jpg);">
                    <div class="icon d-flex justify-content-center">
                        <span class="icon-instagram align-self-center"></span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
<script>
    function validateDates() {
        var checkinDate = new Date(document.getElementById("checkin_date").value);
        var checkoutDate = new Date(document.getElementById("checkout_date").value);
        var currentDate = new Date();
        currentDate.setHours(0, 0, 0, 0);

        if (checkinDate < currentDate) {
            document.getElementById("checkin_error").textContent = "Check-in date cannot be before today";
            return false;
        } else {
            document.getElementById("checkin_error").textContent = "";
        }

        if (checkoutDate <= checkinDate) {
            document.getElementById("checkout_error").textContent = "Check-out date must be after check-in date";
            return false;
        } else {
            document.getElementById("checkout_error").textContent = "";
        }

        return true;
    }

    document.getElementById("checkin_date").addEventListener("input", function () {
        validateDates();
    });

    document.getElementById("checkout_date").addEventListener("input", function () {
        validateDates();
    });
    function calculateBookingDetails() {
        var checkin = new Date(document.getElementById("checkin_date").value);
        var checkout = new Date(document.getElementById("checkout_date").value);
        var duration = (checkout - checkin) / (1000 * 3600 * 24); // Tính số ngày đặt phòng
        document.getElementById("booking_duration").innerText = duration + " days";

        var surcharge = 0;
        if (document.getElementById("buffet_yes").checked) {
            surcharge = 200;
        }
        document.getElementById("surcharge").innerText = "$" + surcharge;
        calculateTotalAmount();
    }
    function calculateTotalAmount() {
        var pricePerDay = parseFloat("@Model.price");
        var duration = parseFloat(document.getElementById("booking_duration").innerText.split(" ")[0]); // Lấy số ngày từ chuỗi "X days"
        var surcharge = parseFloat(document.getElementById("surcharge").innerText.replace("$", ""));

        var totalAmount = (pricePerDay * duration) + surcharge;

        document.getElementById("total_amount").innerText = "$" + totalAmount.toFixed(2);
    }

</script>


